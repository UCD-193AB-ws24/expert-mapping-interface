# Dockerfile.emi
FROM node:18-alpine

# Install nano for text editing capability
RUN apk add --no-cache nano

WORKDIR /app

COPY package*.json ./
RUN npm install

# Copy the entire project
COPY . .
# Copy expertIds.csv from its actual location in the repo

# Build the React app
RUN npm run build

EXPOSE 3001
CMD ["node", "src/backend/server.js"]
